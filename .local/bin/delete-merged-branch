#!/usr/bin/env bash

CURRENT_BRANCH=$(git branch --show-current)

if git checkout master
then
    git pull
    if ! git branch -d $CURRENT_BRANCH
    then
        printf 'Delete anyway? (y/n)? '
        read answer
        if [ "$answer" != "${answer#[Yy]}" ]
        then
            git branch -D $CURRENT_BRANCH
        fi
    fi
fi
