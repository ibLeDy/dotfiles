{
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.codeLens": false,
        // "editor.semanticHighlighting.enabled": false,
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.formatOnSave": true,
    },
    "[xml]": {
        "editor.autoClosingBrackets": "never",
        "files.trimFinalNewlines": false,
        "files.trimTrailingWhitespace": true
    },
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": false,
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.mouseWheelScrollSensitivity": 1,
    "editor.multiCursorModifier": "ctrlCmd",
    "extensions.autoUpdate": false,
    "files.exclude": {
        "**/.git": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
    },
    "search.exclude": {
        "**/*.git": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*venv": true,
    },
    "gitlens.blame.highlight.locations": [
        "overview",
        "gutter",
        "line"
    ],
    "gitlens.codeLens.enabled": false,
    "gitlens.showWelcomeOnInstall": false,
    "partialDiff.enableTelemetry": false,
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName} ${dirty}",
    "editor.cursorBlinking": "solid",
    "python.showStartPage": false,
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.enableExperiments": false,
    "workbench.list.smoothScrolling": true,
    "workbench.preferredDarkColorTheme": "One Dark Pro",
    "workbench.tree.indent": 22,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
    "explorer.autoReveal": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.linting.mypyArgs": [
        "--warn-redundant-casts",
        "--warn-unused-ignores",
        "--disallow-any-generics",
        "--disallow-incomplete-defs",
        "--no-implicit-optional",
        "--no-implicit-reexport",
        "--warn-unused-configs",
        "--warn-return-any",
        "--warn-unreachable",
        "--show-error-codes",
        "--show-column-numbers",
        "--follow-imports=silent",
        "--ignore-missing-imports",
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E501,W503"
    ],
    "python.linting.flake8CategorySeverity.F": "Information",
    "python.analysis.autoImportCompletions": false,
    "python.experiments.enabled": false,
    "python.linting.maxNumberOfProblems": 1000,
    "python.languageServer": "Pylance",
    "workbench.colorCustomizations": {
        "sash.hoverBorder": "#4B8BBE",
        "editorCursor.foreground": "#0066ff"
    },
    "terminal.integrated.profiles.osx": {
        "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "/bin/zsh",
            "icon": "terminal",
        },
        "tmux": {
            "path": "/usr/local/bin/tmux",
            "icon": "terminal-tmux"
        },
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
    "workbench.tree.expandMode": "doubleClick",
    "oneDarkPro.markdownStyle": false,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_odoo",
        "--enable=odoolint",
        "--persistent=no",
        "--unsafe-load-any-extension=no",
        "--indent-after-paren=4",
        "--init-import=no",
        "--ignore-comments=yes",
        "--ignore-docstrings=yes",
        "--ignore-imports=no",
        "--disable=E1101,C0301,manifest-required-author,manifest-deprecated-key,invalid-name,protected-access,no-else-return,no-member,import-error,attribute-defined-outside-init,print-used,redefined-outer-name,missing-function-docstring,missing-class-docstring,missing-module-docstring,fixme,missing-readme,too-many-instance-attributes,too-many-public-methods,too-few-public-methods,no-self-use,bad-continuation"
    ],
    "search.searchOnType": true,
    "search.seedOnFocus": true,
    "debug.allowBreakpointsEverywhere": true,
    "editor.suggest.shareSuggestSelections": true,
    "markdownlint.config": {
        "MD033": false,
        "MD041": false,
    },
    "workbench.startupEditor": "readme",
    "rust-analyzer.lens.enable": false,
    "rust-analyzer.hoverActions.enable": false,
    "rust-analyzer.completion.autoimport.enable": false,
    "editor.rulers": [
        120,
    ],
    "workbench.list.horizontalScrolling": true,
    "search.collapseResults": "auto",
    "search.showLineNumbers": true,
    "bracket-pair-colorizer-2.colorMode": "Independent",
    "bracket-pair-colorizer-2.showBracketsInRuler": true,
    "search.smartCase": true,
    "python.linting.pylintUseMinimalCheckers": false,
    "workbench.sash.size": 6,
    "workbench.editorAssociations": {},
    "python.formatting.provider": "black",
    "workbench.sash.hoverDelay": 50,
    "files.trimFinalNewlines": false,
    "odooScaffold.odooTemplatePath": "/Users/ialonso/Development/custom_addons12/all_scaffold_template/module",
    "git.autofetch": true,
    "redhat.telemetry.enabled": false,
    "html-css-class-completion.enableEmmetSupport": true,
    "xml.format.preserveAttributeLineBreaks": true,
    "explorer.sortOrder": "filesFirst",
    "editor.linkedEditing": true,
    "workbench.productIconTheme": "material-product-icons",
    "markdownlint.ignore": [
        ".github/*"
    ],
    "errorLens.messageTemplate": "[1/$count] $message [$source<$code>] [$severity]",
    "oneDarkPro.bold": true,
    "editor.minimap.showSlider": "always",
    "yaml.customTags": [
        "!encrypted/pkcs1-oaep scalar",
        "!vault scalar"
    ],
    "ansible.validate.executablePath": "ansible-lint",
    "python.defaultInterpreterPath": "/usr/local/bin/python3",
    "editor.cursorStyle": "line",
    "terminal.integrated.scrollback": 10000,
    "python.formatting.blackPath": "/usr/local/bin/black",
    "python.linting.flake8Path": "/usr/local/bin/flake8",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "python.testing.pytestEnabled": true,
    "pythonTestExplorer.testFramework": "pytest",
    "jupyter.experiments.enabled": false,
    "testExplorer.gutterDecoration": false,
    "docker.showStartPage": false,
    "rust-analyzer.cargo.allFeatures": true,
    "rust-analyzer.debug.openDebugPane": true,
    "rust-analyzer.hoverActions.references": true,
    "rust-analyzer.updates.askBeforeDownload": true,
    "rust-analyzer.workspace.symbol.search.kind": "all_symbols",
    "rust-analyzer.workspace.symbol.search.scope": "workspace_and_dependencies",
    "editor.bracketPairColorization.enabled": true,
    "editor.find.seedSearchStringFromSelection": "selection",
    "files.associations": {
        ".env": "plaintext"
    },
    "errorLens.enabled": true,
    "editor.guides.bracketPairs": true,
    "telemetry.telemetryLevel": "off",
    "files.legacyWatcher": "off",
    "update.mode": "start",
    "python.linting.mypyEnabled": true,
}
