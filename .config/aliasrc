#!/usr/bin/env bash

alias \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="rm -iv" \
    ls="ls -h --color=auto" \
    grep="grep --color=auto" \
    brew="sudo -Hu brew brew" \
    alacritty="/Applications/Alacritty.app/Contents/MacOS/alacritty" \
    tree="tree --dirsfirst -C -a -I '.git|.venv|*cache*|target'" \
    tar="COPYFILE_DISABLE=1 tar --exclude='*.pyc' --exclude='.DS_Store'" \
    nssh="ssh -o 'StrictHostKeyChecking=no' -o 'UserKnownHostsFile /dev/null'" \
    subl="$HOME/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"

# Use neovim for vim if present.
[ -x "$(command -v nvim)" ] && alias vim="nvim"

# Use bat for cat if present.
[ -x "$(command -v bat)" ] && alias cat="bat"

# Use lsd for ls if present.
[ -x "$(command -v lsd)" ] && alias ls="lsd"
